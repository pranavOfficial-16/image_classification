<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3DE52"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/classifytext"
        android:layout_width="284dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="67dp"
        android:layout_marginTop="117dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="571dp"
        android:text="@string/click_below_to_select_a_image"
        android:textSize="20sp"
        android:textStyle="bold">

    </TextView>

    <ImageView
        android:id="@+id/image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="227dp"
        android:contentDescription="@string/todo"
        android:src="@color/colorAccent" />

    <Button
        android:id="@+id/classify"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="586dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="97dp"
        android:background="#9665EB"
        android:text="@string/classify"
        android:textColor="#000" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="84dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="657dp"
        android:text="@string/textview"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>